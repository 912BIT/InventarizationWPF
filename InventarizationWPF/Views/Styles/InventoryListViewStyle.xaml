<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:InventarizationWPF.Views.Styles">

    <Style x:Key="textblock-header" TargetType="TextBlock">
        <Setter Property="Margin" Value="10" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="listbox-inventory-list" TargetType="ListBox">
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style x:Key="button-bottom" TargetType="Button">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Width" Value="80" />
    </Style>
    
</ResourceDictionary>